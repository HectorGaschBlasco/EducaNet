<div
  class="flex items-center min-h-full min-w-fit dark:bg-gray-800 rounded-lg px-16 mr-auto border-2 border-slate-500"
  id="Teacher_Form"
>
  <div class="container mx-auto">
    <div class="max-w-md mx-auto my-10">
      <div class="text-center">
        <h1
          class="my-3 text-3xl font-semibold text-gray-700 dark:text-gray-200"
        >
          Teachers
        </h1>
        <p class="text-gray-500 dark:text-gray-400">
          Form to login as a teacher
        </p>
      </div>

      <div class="m-7">
        <div class="mb-6">
          <button
            type="button"
            id="Teacher-SignIn-btn"
            class="w-full px-3 py-4 text-white bg-indigo-500 rounded-md focus:bg-indigo-600 focus:outline-none"
          >
            Sign in
          </button>
        </div>
        <div class="mb-6">
          <button
            type="button"
            id="Teacher-SignUp-btn"
            class="w-full px-3 py-4 text-white bg-indigo-500 rounded-md focus:bg-indigo-600 focus:outline-none"
          >
            Sign up
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  const TeacherSignInBtn = document.getElementById("Teacher-SignIn-btn");
  const TeacherSignUpBtn = document.getElementById("Teacher-SignUp-btn");
  const Main = document.getElementById("main");
  const Teacher_SignIn = document.getElementById("Teacher_SignIn");
  const Teacher_SignUp = document.getElementById("Teacher_SignUp");

  TeacherSignInBtn.addEventListener("click", () => {
    Main.style.display = "none";
    Teacher_SignIn.style.display = "flex";
  });
  TeacherSignUpBtn.addEventListener("click", () => {
    Main.style.display = "none";
    Teacher_SignUp.style.display = "flex";
    });
</script>
